# Base URL of the backend service (e.g., where FastAPI is running)
BASE_URL=http://localhost:8000
# Base URL of the frontend Docusaurus app
FRONTEND_URL=http://localhost:3000

# PostgreSQL / NeonDB Connection URL
# Example: postgresql://user:password@host:port/dbname
DATABASE_URL=

# Session Secret (generate a random string for this using 'openssl rand -hex 32')
SESSION_SECRET=

# --- Email Service Configuration ---
SMTP_SERVER=your_smtp_server.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SENDER_EMAIL=your_sender_email@example.com

# --- Identity Provider Configuration ---
# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_METADATA_URL=https://accounts.google.com/.well-known/openid-configuration

# GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
# GITHUB_METADATA_URL may not be directly available, Authlib can often infer or use direct endpoints
# For direct OAuth2, the URLs are typically:
# AUTHORIZE_URL: https://github.com/login/oauth/authorize
# ACCESS_TOKEN_URL: https://github.com/login/oauth/access_token
# API_BASE_URL: https://api.github.com/

# Facebook
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
# FACEBOOK_METADATA_URL may not be directly available, Authlib can often infer or use direct endpoints
# For direct OAuth2, the URLs are typically:
# AUTHORIZE_URL: https://www.facebook.com/v12.0/dialog/oauth
# ACCESS_TOKEN_URL: https://graph.facebook.com/v12.0/oauth/access_token
# API_BASE_URL: https://graph.facebook.com/v12.0/
